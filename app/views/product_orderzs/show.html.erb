<div class="container">
  <h1 class="text-center">Product Order Details</h1>

  <div class="card mx-auto table-custom-head custom-card" style="max-width: 80%;">
    <div class="card-body text-center">
      <%= render @product_orderz %>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Edit this product order", edit_product_orderz_path(@product_orderz), class: "btn btn-primary logo-or-btn btn-lg me-2" %>
    <%= link_to "Back to product orders", product_orderzs_path, class: "btn btn-warning btn-lg logo-gr-btn me-2" %>
    <%= button_to "Destroy this product order", @product_orderz, method: :delete, class: "btn btn-danger btn-lg magin-top-btn" %>
  </div>
</div>


