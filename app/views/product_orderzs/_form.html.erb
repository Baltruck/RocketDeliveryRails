<%= form_with(model: product_orderz) do |form| %>
  <% if product_orderz.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product_orderz.errors.count, "error") %> prohibited this product_orderz from being saved:</h2>

      <ul>
        <% product_orderz.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :product_id, "Products" %>
    <%= form.select :product_id, Product.all.map {|product| [product.name, product.id]}, { include_blank: true, prompt: "Select a product" }, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :order_id, "Orders" %>
    <%= form.select :order_id, Order.all.map {|order| [order.id]}, { include_blank: true, prompt: "Select an order" }, class: "form-control" %>
  </div>

  <div>
    <%= form.label :product_quantity, style: "display: block" %>
    <%= form.number_field :product_quantity %>
  </div>

  <div>
    <%= form.label :product_unit_cost, style: "display: block" %>
    <%= form.number_field :product_unit_cost %>
  </div>

  <div>
    <%= form.submit "Submit", class: "btn btn-warning logo-gr-btn magin-top-btn" %>
  </div>
<% end %>
