<div class="container">
  <h1 class="text-center">Order Details</h1>

  <div class="card mx-auto table-custom-head custom-card" style="max-width: 80%;">
    <div class="card-body text-center">
      <%= render @orderz %>
    </div>
  </div>
    
  <div class="text-center mt-3">
    <%= link_to "Edit this orderz", edit_orderz_path(@orderz), class: "btn btn-primary logo-or-btn btn-lg me-2" %>
    <%= link_to "Back to orderzs", orderzs_path, class: "btn btn-warning btn-lg logo-gr-btn me-2" %>
    <%= button_to "Destroy this orderz", @orderz, method: :delete, class: "btn btn-danger btn-lg magin-top-btn" %>
  </div>
</div>

