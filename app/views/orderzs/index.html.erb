<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Orders</h1>

  <table class="table table-striped custom-bordered mx-auto" style="max-width: 80%;">
    <thead>
      <tr>
        <th class="text-center table-custom-head">Restaurant</th>
        <th class="text-center table-custom-head">Customer</th>
        <th class="text-center table-custom-head">Order Status</th>
        <th class="text-center table-custom-head">Restaurant Rating</th>
        <th class="text-center table-custom-head">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orderzs.each do |orderz| %>
        <tr>
          <td class="text-center"><%= orderz.restaurant.name %></td>
          <td class="text-center"><%= orderz.customer.email %></td>
          <td class="text-center"><%= orderz.order_status.name %></td>
          <td class="text-center"><%= orderz.restaurant_rating %></td>
          <td class="text-center">
            <%= link_to "Show", orderz, class: "btn btn-primary logo-gr-btn btn-sm me-2" %>
            <%= link_to "Edit", edit_orderz_path(orderz), class: "btn btn-secondary logo-or-btn btn-sm me-2" %>
            <%= link_to "Delete", orderz, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to "New order", new_orderz_path, class: "btn btn-warning logo-gr-btn btn-lg m-3" %>
  </div>
</div>
