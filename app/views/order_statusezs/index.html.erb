<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Order statuses</h1>

  <table class="table table-striped custom-bordered mx-auto" style="max-width: 80%;">
    <thead>
      <tr>
        <th class="text-center table-custom-head">Name</th>
        <th class="text-center table-custom-head">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @order_statusezs.each do |order_statusez| %>
        <tr>
          <td class="text-center"><%= order_statusez.name %></td>
          <td class="text-center">
            <%= link_to "Show", order_statusez, class: "btn btn-primary logo-gr-btn btn-sm me-2" %>
            <%= link_to "Edit", edit_order_statusez_path(order_statusez), class: "btn btn-secondary logo-or-btn btn-sm me-2" %>
            <%= link_to "Delete", order_statusez, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to "New order status", new_order_statusez_path, class: "btn btn-warning logo-gr-btn btn-lg m-3" %>
  </div>
</div>
