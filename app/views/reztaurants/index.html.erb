<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Restaurants</h1>

  <table class="table table-striped custom-bordered mx-auto" style="max-width: 80%;">
    <thead>
      <tr>
        <th class="text-center table-custom-head">Email</th>
        <th class="text-center table-custom-head">Name</th>
        <th class="text-center table-custom-head">Phone</th>
        <th class="text-center table-custom-head">Active</th>
        <th class="text-center table-custom-head">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @reztaurants.each do |reztaurant| %>
        <tr>
          <td class="text-center"><%= reztaurant.email %></td>
          <td class="text-center"><%= reztaurant.name %></td>
          <td class="text-center"><%= reztaurant.phone %></td>
          <td class="text-center"><%= reztaurant.active %></td>
          <td class="text-center">
            <%= link_to "Show", reztaurant, class: "btn btn-primary logo-gr-btn btn-sm me-2" %>
            <%= link_to "Edit", edit_reztaurant_path(reztaurant), class: "btn btn-secondary logo-or-btn btn-sm me-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to "New restaurant", new_reztaurant_path, class: "btn btn-warning logo-gr-btn btn-lg m-3" %>
  </div>
</div>
