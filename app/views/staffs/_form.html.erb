<%= form_with(model: staff) do |form| %>
  <% if staff.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
        <% staff.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= form.label :user_id, "User" %>
  <%= form.collection_select :user_id, User.all, :id, :name, { include_blank: true, prompt: "Select a user" }, { class: "form-control" } %>
</div>

<div class="field">
  <%= form.label :address_id, "Address" %>
  <%= form.select :address_id, Address.all.map {|address| [address.street_address, address.id]}, { include_blank: true, prompt: "Select an address" }, class: "form-control" %>
</div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.number_field :phone %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div class="text-center">
  <%= form.submit "Submit", class: "btn btn-warning logo-gr-btn magin-top-btn" %>
</div>
<% end %>
