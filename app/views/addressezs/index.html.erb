<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Addresses</h1>

  <table class="table table-striped custom-bordered mx-auto" style="max-width: 80%;">
    <thead>
      <tr>
        <th class="text-center table-custom-head">Street Address</th>
        <th class="text-center table-custom-head">City</th>
        <th class="text-center table-custom-head">Postal Code</th>
        <th class="text-center table-custom-head">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @addressezs.each do |addressez| %>
        <tr>
          <td class="text-center"><%= addressez.street_address %></td>
          <td class="text-center"><%= addressez.city %></td>
          <td class="text-center"><%= addressez.postal_code %></td>
          <td class="text-center">
            <%= link_to "Show", addressez, class: "btn btn-primary logo-gr-btn btn-sm me-2" %>
            <%= link_to "Edit", edit_addressez_path(addressez), class: "btn btn-secondary logo-or-btn btn-sm me-2" %>
            <%= link_to "Delete", addressez, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to "New address", new_addressez_path, class: "btn btn-warning logo-gr-btn btn-lg m-3" %>
  </div>
</div>
