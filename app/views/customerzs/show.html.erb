<div class="container">
  <h1 class="text-center">Customer Details</h1>

  <div class="card mx-auto table-custom-head custom-card" style="max-width: 80%;">
    <div class="card-body text-center">
      <%= render @customerz %>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Edit this customer", edit_customerz_path(@customerz), class: "btn btn-primary logo-or-btn btn-lg me-2" %>
    <%= link_to "Back to customers", customerzs_path, class: "btn btn-warning btn-lg logo-gr-btn me-2" %>
    <%= button_to "Delete this customer", @customerz, method: :delete, class: "btn btn-danger btn-lg magin-top-btn" %>
  </div>
</div>
