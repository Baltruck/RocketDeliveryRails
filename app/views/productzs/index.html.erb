<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Products</h1>

  <table class="table table-striped custom-bordered mx-auto" style="max-width: 80%;">
    <thead>
      <tr>
        <th class="text-center table-custom-head">Restaurant</th>
        <th class="text-center table-custom-head">Name</th>
        <th class="text-center table-custom-head">Description</th>
        <th class="text-center table-custom-head">Cost</th>
        <th class="text-center table-custom-head">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @productzs.each do |productz| %>
        <tr>
          <td class="text-center"><%= productz.restaurant.name %></td>
          <td class="text-center"><%= productz.name %></td>
          <td class="text-center"><%= productz.description %></td>
          <td class="text-center"><%= productz.cost %></td>
          <td class="text-center">
            <%= link_to "Show", productz, class: "btn btn-primary logo-gr-btn btn-sm me-2" %>
            <%= link_to "Edit", edit_productz_path(productz), class: "btn btn-secondary logo-or-btn btn-sm me-2" %>
            <%= link_to "Delete", productz, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to "New product", new_productz_path, class: "btn btn-warning logo-gr-btn btn-lg m-3" %>
  </div>
</div>
